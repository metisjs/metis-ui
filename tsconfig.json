{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@util/*": ["src/components/_util/*"],
      "@@/*": [".dumi/tmp/*"],
      "metis-ui": ["src/components/index.ts"],
      "metis-ui/es/*": ["src/components/*"],
      "metis-ui/lib/*": ["src/components/*"],
      "metis-ui/locale/*": ["src/components/locale/*"]
    },
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "stripInternal": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist"]
}
