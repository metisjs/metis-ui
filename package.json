{
  "name": "metis-ui",
  "version": "0.0.1-alpha.1",
  "description": "A react library developed with dumi",
  "license": "MIT",
  "main": "lib/components/index.js",
  "module": "es/components/index.js",
  "typings": "lib/components/index.d.ts",
  "files": [
    "dist",
    "lib",
    "es"
  ],
  "scripts": {
    "build": "father build",
    "build:watch": "father dev",
    "dev": "dumi dev",
    "docs:build": "dumi build",
    "doctor": "father doctor",
    "lint": "npm run lint:es && npm run lint:css",
    "lint:css": "stylelint \"{src,test}/**/*.{css,less}\"",
    "lint:es": "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install && dumi setup",
    "release": "node ./scripts/release",
    "start": "npm run dev"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@types/node": "^20.0.0",
    "@types/qs": "^6.9.15",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11",
    "@types/throttle-debounce": "^5.0.2",
    "@umijs/lint": "4.2.10",
    "@umijs/plugins": "4.2.10",
    "@umijs/utils": "4.2.10",
    "dumi": "2.3.8",
    "eslint": "^8.39.0",
    "eslint-plugin-lodash": "^8.0.0",
    "father": "^4.1.9",
    "fetch-jsonp": "^1.3.0",
    "git-repo-info": "^2.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-packagejson": "^2.4.3",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "qs": "^6.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-fast-marquee": "^1.6.4",
    "rimraf": "^5.0.7",
    "stylelint": "^15.6.0",
    "tailwindcss": "^3.4.4",
    "zx": "^8.1.2"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0",
    "tailwindcss": ">=3"
  },
  "publishConfig": {
    "access": "public"
  },
  "authors": [
    "wangjianming.x@gmail.com"
  ],
  "dependencies": {
    "@ctrl/tinycolor": "^3.6.0",
    "@metisjs/icons": "^0.0.2-alpha.0",
    "@rc-component/portal": "^1.1.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/lodash": "^4.14.194",
    "ahooks": "^3.8.0",
    "class-variance-authority": "^0.6.0",
    "classnames": "^2.3.2",
    "lodash": "^4.17.21",
    "rc-field-form": "1.31.0",
    "rc-input": "1.0.4",
    "rc-overflow": "1.3.1",
    "rc-resize-observer": "^1.3.1",
    "rc-scrollbars": "^1.1.6",
    "rc-textarea": "1.2.3",
    "rc-util": "5.31.2",
    "rc-virtual-list": "3.14.2",
    "scroll-into-view-if-needed": "^3.0.10",
    "tailwind-merge": "^1.12.0",
    "throttle-debounce": "^5.0.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "rc-input@1.0.4": "patches/rc-input@1.0.4.patch",
      "rc-textarea@1.2.3": "patches/rc-textarea@1.2.3.patch",
      "rc-overflow@1.3.1": "patches/rc-overflow@1.3.1.patch",
      "@umijs/plugins@4.2.10": "patches/@umijs__plugins@4.2.10.patch"
    }
  }
}
